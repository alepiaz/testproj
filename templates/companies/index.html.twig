{%extends 'base.html.twig'%}

{%block title%}Companies{%endblock%}

{%block body%}
  {%if companies%}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Company Name</th>
          <th>Actions</th>

        </tr>
      </thead>
      <tbody>
      {%for company in companies%}
        <tr>
          <td>{{company.name}}</td>
          <td>
            <a href="companies/{{company.name}}" class = "btn btn-dark">Show</a>
          </td>
        </tr>
      {%endfor%}

      </tbody>
    </table>
  {%else%}
    <p> No companies to display  </p>
  {%endif%}
{%endblock%}
